doctype html
head
  meta(charset='UTF-8')
  title Me Who Health
  link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
  script(src='vendor/angular.js')
  script(src='js/GameCtrl.js')
  script(src='js/app.js')
  body(ng-app='facesApp', ng-controller='GameCtrl')
    body
      .container
        h1.text-center Faces
        .row-fluid

          .col-sm-6
            h4.text-center Guess who?
            p Score: 
              | {{score}}
            div(ng-show='usersLeft')
              div(style='margin: 1em 0; min-height: 15em')
                img(ng-src='{{people[index].pictureUrl}}', alt='', style='max-width:350px')
              input(ng-model='name', type='text')
              button(ng-click='useHint()') Use Hint
              p Hint: {{hint}}
              p(style='min-height: 2em') {{message}}
              ul
                li(ng-repeat='person in people')
                  | {{person.name}}
                  | {{person.pictureUrl}}
                  | {{person.complete}}

          .col-sm-6
            .finishedUsers
              h4.text-center Completed
          p(ng-show='!usersLeft')
            | Game won!
          div(ng-repeat='person in finished')
            | {{person.name}}

doctype html
head
  meta(charset='UTF-8')
  title Me Who Health
  link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
  //- todo -- replace with our own bootstrap
  //- yayyy offline mode...
  script(src='vendor/angular.js')
  script(src='js/GameCtrl.js')
  script(src='js/app.js')
  link(rel='stylesheet', href='css/file.css')

  body(ng-app='facesApp', ng-controller='GameCtrl')
    body
      .container
        h1.u-text-center Faces to Guess!
        .row-fluid
          .col-sm-6
            p Score: 
              | {{score}}
            div(ng-show='peopleLeft.length')
              .image-wrap
                img(ng-src='{{peopleLeft[index].pictureUrl}}', alt='', style='max-width:350px')
              .control-wrap.well
                input(ng-model='nameMatcher', type='text')
                button(ng-click="useHint('first')")
                  | First name hint
                button(ng-click="useHint('last')")
                  | Last name hint
                button(ng-click='skip()')
                  | Skip
                
                p(ng-class="{correct: nameParts.first}") First name: 
                  span(ng-hide='nameParts.first')
                    | {{hint.first}}
                  span(ng-show='nameParts.first')
                    | {{peopleLeft[index].firstName}}
                p(ng-class="{correct: nameParts.last}") Last name: 
                  span(ng-hide='nameParts.last')
                    | {{hint.last}}
                  span(ng-show='nameParts.last')
                    | {{peopleLeft[index].lastName}}

              p.status
                | {{message}}
              //- ul
              //-   li(ng-repeat='person in peopleLeft')
              //-     | {{person.firstName}}
              //-     | {{person.lastName}}
              //-     | {{person.pictureUrl}}

          .col-sm-6
            .finishedUsers
              h4.u-text-center Completed
          p(ng-show='!peopleLeft.length')
            | Game won!
          div(ng-repeat='person in finished')
            p
              | {{person.firstName}} {{person.lastName}}
            p
              | Hints used: {{person.hintsUsed}}


doctype html
head
  meta(charset='UTF-8')
  title Me Who Health
  link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
  //- todo -- replace with our own bootstrap
  script(src='vendor/angular.js')
  script(src='js/GameCtrl.js')
  script(src='js/app.js')
  link(rel='stylesheet', href='css/file.css')

  body(ng-app='facesApp', ng-controller='GameCtrl')
    body
      .container
        h1.u-text-center Faces to Guess!
        .row-fluid

          .col-sm-6
            p.u-text-center Guess who?
            p Score: 
              | {{score}}
            div(ng-show='peopleLeft.length')
              .image-wrap
                img(ng-src='{{peopleLeft[index].pictureUrl}}', alt='', style='max-width:350px')
              input(ng-model='name', type='text')
              button(ng-click='useHint()') 
                | Use Hint
              button(ng-click='skip()')
                | Skip
              p Hint: {{hint}}
              p(style='min-height: 2em') {{message}}
              ul
                li(ng-repeat='person in people')
                  | {{person.name}}
                  | {{person.pictureUrl}}
                  | {{person.complete}}

          .col-sm-6
            .finishedUsers
              h4.u-text-center Completed
          p(ng-show='!peopleLeft.length')
            | Game won!
          div(ng-repeat='person in finished')
            | {{person.name}}
